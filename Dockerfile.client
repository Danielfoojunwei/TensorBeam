FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN pip install uv

# Copy project files
COPY pyproject.toml ./
COPY fhe_inference_service/ ./fhe_inference_service/
COPY examples/ ./examples/

# Install dependencies
RUN uv sync --no-dev

# Default: run demo
CMD ["uv", "run", "python", "examples/fhe_demo.py"]
